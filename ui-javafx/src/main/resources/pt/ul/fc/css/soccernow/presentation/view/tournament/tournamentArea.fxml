<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="tournamentAreaPane" fx:controller="pt.ul.fc.css.soccernow.presentation.control.tournament.TournamentAreaController" xmlns:fx="http://javafx.com/fxml/1">
    <VBox xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER">
        <Label text="Tournament Management Area"/>
        
        <Button text="Create New Tournament" onAction="#createTournament"/>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Tournament ID:"/>
            <TextField fx:id="tournamentIdField" promptText="Enter tournament ID"/>
            <Button text="Search" onAction="#searchTournament"/>
        </HBox>
        
        <Label fx:id="successLabel" style="-fx-text-fill: green;" visible="false"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
        
        <Button text="Back to Menu" onAction="#backToMenu"/>
    </VBox>
</StackPane>