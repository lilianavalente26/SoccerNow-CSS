<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="clubAreaPane" fx:controller="pt.ul.fc.css.soccernow.presentation.control.club.ClubAreaController" xmlns:fx="http://javafx.com/fxml/1">
    <VBox xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER">

        <Label text="Club Management Area - Register, Edit and Remove Clubs!"/>

        <Button text="Register New Club" onAction="#registerClub"/>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Club ID:"/>
            <TextField fx:id="clubIdField" promptText="Enter club ID"/>
            <Button text="Search" onAction="#searchClub"/>
        </HBox>
        
        <Button text="Manage Teams" onAction="#manageTeams"/>
        
        <Label fx:id="successLabel" style="-fx-text-fill: green;" visible="false"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
        
        <Button text="Back to Menu" onAction="#backToMenu"/>
        
    </VBox>
</StackPane>